
<form action="/user/update/<%- user.id %>" method="POST" name="create-form">
    <div class="container mt-4" style="width: 500px; margin: auto; ">
        <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Name</label>
            <div class="col-10">
                <input class="form-control" type="text" value="<%- user.name %>" name="name" id="example-text-input">
            </div>
        </div>
        <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Title</label>
            <div class="col-10">
                <input class="form-control" type="text" value="<%- user.title %>" name="title"
                       id="example-text-input-title">
            </div>
        </div>
        <div class="form-group row">
            <label for="example-email-input" class="col-2 col-form-label">Email</label>
            <div class="col-10">
                <input class="form-control" type="email" value="<%- user.email %>" name="email"
                       id="example-email-input">
            </div>
        </div>
        <!--  Message_name-->
        <div class="message_name text-sm-center">
            <% flash.get('errname').forEach(function (message) { %>
            <div style="color: red;">
                <%= message %>
            </div>
            <% }) %>
        </div>
        <!-- over Message_name-->
    </div>
    <input type="submit" value="Edit" class="btn btn-success" style="margin-left: 680px;"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
</form>
